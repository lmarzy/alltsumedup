/* ==========================================================================
   TOOLS - BLOCK - VISIBILITY
   ========================================================================== */

is-hidden = {
	display: none !important
	visibility: hidden
}
//{is-hidden};

text-is-hidden = {
	text-indent: 100%
	white-space: nowrap
	overflow: hidden
}
//{text-is-hidden};

is-invisible = {
	visibility: hidden
}
//{is-invisible};

is-vh = {
	overflow: hidden
	position: fixed
	clip: rect(0 0 0 0)
	height: 1px
	width: 1px
	margin: -1px
	padding: 0
	border: 0
}
//{is-vh};
